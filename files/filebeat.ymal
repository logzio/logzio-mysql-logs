filebeat:
  inputs:
    - type: filestream
      paths:
        - "${MYSQL_ERROR_LOG_FILE}*"
      fields:
        logzio_codec: plain
        token: ${LOGZIO_TOKEN}
        type: mysql_error
      fields_under_root: true
      ignore_older: 3h
    - type: filestream
      paths:
       - "${MYSQL_SLOW_LOG_FILE}*"
      fields:
        logzio_codec: plain
        token: ${LOGZIO_TOKEN}
        type: mysql_slow_query
      fields_under_root: true
      ignore_older: 3h
      multiline:
        pattern: '^# Time:'
        negate: true
        match: after
    - type: log
      paths:
       - "${MYSQL_LOG_FILE}*"
      fields:
        logzio_codec: plain
        token: ${LOGZIO_TOKEN}
      fields_under_root: true
      ignore_older: 3h
      tail_files: true
      document_type: mysql
      multiline:
        pattern: '^[[:space:]]'
        negate: false
        match: after

#For version 7 and higher
filebeat.registry.path: /var/lib/filebeat

#The following processors are to ensure compatibility with version 7
processors:
- rename:
    fields:
     - from: "agent"
       to: "beat_agent"
    ignore_missing: true
- rename:
    fields:
     - from: "log.file.path"
       to: "source"
    ignore_missing: true

output:
  logstash:
    hosts: ["${LOGZIO_LISTENER}:5015"]
    #  The below configuration is used for Filebeat 5.0 or higher      
    ssl:
      certificate_authorities: ['/etc/pki/tls/certs/COMODORSADomainValidationSecureServerCA.crt','/etc/pki/tls/certs/SectigoRSADomainValidationSecureServerCA.crt']
logging:
  to_files: true
  files:
    path: /var/log/logzio/
    name: filebeat.log
    rotateeverybytes: 10485760
    keepfiles: 2
  level: warning
